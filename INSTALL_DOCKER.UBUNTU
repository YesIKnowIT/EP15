#0
#
# Installation instruction for Ubuntu
#
#1
# Remove previously installed docker
apt-get remove docker \
               docker-engine \
               docker.io
#2
# Install some pre-requisites
apt-get update
apt-get install -y \
     apt-transport-https \
     ca-certificates \
     curl \
     gnupg2 \
     software-properties-common
# Extra deps for Trusty
#apt-get install \
#    linux-image-extra-$(uname -r) \
#    linux-image-extra-virtual
#3
# Add the Docker gpg key (apt-based distro only)
REPO="https://download.docker.com/linux/ubuntu"
curl -fsSL "${REPO}/gpg" | apt-key add -
echo Fingerprint should be
echo 9DC8 5822 9FC7 DD38 854A E2D8 8D81 803C 0EBF CD88
apt-key fingerprint 0EBFCD88
#4
# Add Docker repository
REPO="https://download.docker.com/linux/ubuntu"
add-apt-repository \
   "deb [arch=amd64] ${REPO} \
   $(lsb_release -cs) \
   stable"
#5
#Install Docker (and check repository signature)
apt-get update
apt-get install -y docker-ce
